@model IEnumerable<Projekt_BDwAI_Magazyn.Models.Order>

@{
    ViewData["Title"] = "Zamówienia";
}

<h1>Zamówienia</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Nowe zamówienie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Pozycji</th>
            <th>Notatka</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.CreatedAt.ToLocalTime()</td>
                <td>@(o.Items?.Count ?? 0)</td>
                <td>@o.Notes</td>
                <td>
                    <a asp-action="Details" asp-route-id="@o.Id">Szczegóły</a>
                </td>
            </tr>
        }
    </tbody>
</table>
