@model IEnumerable<Projekt_BDwAI_Magazyn.Models.Order>
@using Projekt_BDwAI_Magazyn.Models

@{
    ViewData["Title"] = "Zamówienia";
    var currentFilter = ViewBag.CurrentFilter?.ToString();
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- DODAJ TUTAJ FORMULARZ FILTROWANIA -->
<div class="row mb-4">
    <div class="col-md-6">
        <form method="get" asp-action="Index" class="row g-2">
            <div class="col-auto">
                <label for="statusFilter" class="col-form-label">Filtruj po statusie:</label>
            </div>
            <div class="col-auto">
                <select name="statusFilter" id="statusFilter" class="form-select" onchange="this.form.submit()">
                    <option value="" selected="@(string.IsNullOrEmpty(currentFilter) ? "selected" : null)">Wszystkie</option>
                    <option value="New" selected="@(currentFilter == "New" ? "selected" : null)">Nowe</option>
                    <option value="InProgress" selected="@(currentFilter == "InProgress" ? "selected" : null)">W trakcie</option>
                    <option value="Completed" selected="@(currentFilter == "Completed" ? "selected" : null)">Zrealizowane</option>
                    <option value="Cancelled" selected="@(currentFilter == "Cancelled" ? "selected" : null)">Anulowane</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Filtruj</button>
                @if (!string.IsNullOrEmpty(currentFilter))
                {
                    <a asp-action="Index" class="btn btn-secondary ms-1">Wyczyść</a>
                }
            </div>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">Nowe zamówienie</a>
    </div>
</div>

<!-- INFORMACJA O AKTYWNYM FILTRZE -->
@if (!string.IsNullOrEmpty(currentFilter))
{
    <div class="alert alert-info mb-3">
        <strong>Filtr aktywny:</strong>
        @{
            var filterText = currentFilter switch
            {
                "New" => "Nowe",
                "InProgress" => "W trakcie",
                "Completed" => "Zrealizowane",
                "Cancelled" => "Anulowane",
                _ => currentFilter
            };
        }
        Status: <span class="badge bg-primary">@filterText</span>
        <a asp-action="Index" class="float-end">Pokaż wszystkie</a>
    </div>
}

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Użytkownik</th>
            <th>Status</th>
            <th>Pozycje</th>
            <th>Wartość</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.User?.Email</td>
                <td>
                    <span class="badge
                            @(item.Status == OrderStatus.New ? "bg-primary" :
                                                    item.Status == OrderStatus.Completed ? "bg-success" :
                                                    item.Status == OrderStatus.InProgress ? "bg-warning" :
                                                    "bg-secondary")">
                        @item.Status
                    </span>
                </td>
                <td>@item.OrderItems.Count</td>
                <td>@item.OrderItems.Sum(oi => oi.Quantity * oi.UnitPrice).ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Szczegóły
                    </a>
                </td>
            </tr>
        }
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted py-4">
                    @if (!string.IsNullOrEmpty(currentFilter))
                    {
                        <span>Brak zamówień z wybranym statusem.</span>
                        <a asp-action="Index" class="btn btn-link">Pokaż wszystkie</a>
                    }
                    else
                    {
                        <span>Brak zamówień. <a asp-action="Create">Utwórz pierwsze zamówienie</a></span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- DODAJ LICZNIKI (opcjonalnie) -->
@if (ViewBag.StatusCounts != null)
{
    <div class="mt-3">
        <h5>Statystyki:</h5>
        <div class="btn-group">
            @{
                var total = Model.Count();
                <a asp-action="Index" class="btn btn-outline-secondary @(string.IsNullOrEmpty(currentFilter) ? "active" : "")">
                    Wszystkie: @total
                </a>

                var statuses = new[] { "New", "InProgress", "Completed", "Cancelled" };
                var displayNames = new Dictionary<string, string>
                {
                { "New", "Nowe" },
                { "InProgress", "W trakcie" },
                { "Completed", "Zrealizowane" },
                { "Cancelled", "Anulowane" }
                };

                foreach (var status in statuses)
                {
                    var count = ViewBag.StatusCounts.ContainsKey(status) ? ViewBag.StatusCounts[status] : 0;
                    <a asp-action="Index" asp-route-statusFilter="@status"
                       class="btn btn-outline-secondary @(currentFilter == status ? "active" : "")">
                        @displayNames[status]: @count
                    </a>
                }
            }
        </div>
    </div>
}